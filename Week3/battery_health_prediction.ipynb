# Week 3: EV Battery Health Prediction using Generative AI

import pandas as pd
import numpy as np
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import MinMaxScaler, LabelEncoder
from sklearn.ensemble import RandomForestRegressor
from sklearn.metrics import mean_squared_error, mean_absolute_error, r2_score
import matplotlib.pyplot as plt

# Loading Real Data
real_df = pd.read_csv("ev_battery_charging_data.csv")
real_df = real_df.dropna()
categorical_cols = ['Charging Mode', 'Battery Type', 'EV Model']

for col in categorical_cols:
    le = LabelEncoder()
    real_df[col] = le.fit_transform(real_df[col])

real_df = real_df.select_dtypes(include=[np.number])
print("Real preprocessed data shape:", real_df.shape)

# Loading Synthetic Data (from Week 2 VAE output)
synthetic_df = pd.read_csv("synthetic_battery_data.csv")
print("Synthetic data shape:", synthetic_df.shape)

# Combining datasets
combined_df = pd.concat([real_df, synthetic_df], ignore_index=True)
print("Combined data shape:", combined_df.shape)

# Prepare Data
target = "Degradation Rate (%)"
features = [col for col in combined_df.columns if col != target]

X_real, y_real = real_df[features], real_df[target]
X_comb, y_comb = combined_df[features], combined_df[target]

# Scale both
scaler_r = MinMaxScaler()
Xr_scaled = scaler_r.fit_transform(X_real)
scaler_c = MinMaxScaler()
Xc_scaled = scaler_c.fit_transform(X_comb)

# Split data
Xr_train, Xr_test, yr_train, yr_test = train_test_split(Xr_scaled, y_real, test_size=0.2, random_state=42)
Xc_train, Xc_test, yc_train, yc_test = train_test_split(Xc_scaled, y_comb, test_size=0.2, random_state=42)

# Train Random Forest models
model_real = RandomForestRegressor(n_estimators=100, random_state=42)
model_comb = RandomForestRegressor(n_estimators=100, random_state=42)
model_real.fit(Xr_train, yr_train)
model_comb.fit(Xc_train, yc_train)

# Evaluate models
yr_pred = model_real.predict(Xr_test)
yc_pred = model_comb.predict(Xc_test)

metrics = {
    "Model": ["Real Only", "Real + Synthetic"],
    "RMSE": [
        np.sqrt(mean_squared_error(yr_test, yr_pred)),
        np.sqrt(mean_squared_error(yc_test, yc_pred))
    ],
    "MAE": [
        mean_absolute_error(yr_test, yr_pred),
        mean_absolute_error(yc_test, yc_pred)
    ],
    "R2": [
        r2_score(yr_test, yr_pred),
        r2_score(yc_test, yc_pred)
    ]
}

metrics_df = pd.DataFrame(metrics)
print("\nðŸ“Š Model Comparison:\n", metrics_df)

# Save Metrics Comparison Chart
plt.figure(figsize=(8,5))
plt.bar(metrics_df["Model"], metrics_df["R2"], color=['skyblue','orange'])
plt.title("Model Comparison (RÂ² Score)")
plt.ylabel("RÂ² Score")
plt.savefig("metrics_comparison.png", dpi=300)
plt.show()

# Feature Importance
importance = model_comb.feature_importances_
sorted_idx = np.argsort(importance)[::-1]
plt.figure(figsize=(10,5))
plt.barh(np.array(features)[sorted_idx], importance[sorted_idx])
plt.title("Feature Importance - Real + Synthetic Model")
plt.xlabel("Importance")
plt.gca().invert_yaxis()
plt.savefig("feature_importance.png", dpi=300)
plt.show()

# Predicted vs Actual
plt.figure(figsize=(6,6))
plt.scatter(yc_test, yc_pred, alpha=0.6, color="teal")
plt.xlabel("Actual Degradation Rate (%)")
plt.ylabel("Predicted Degradation Rate (%)")
plt.title("Predicted vs Actual (Real + Synthetic)")
plt.plot([yc_test.min(), yc_test.max()], [yc_test.min(), yc_test.max()], 'r--')
plt.savefig("predicted_vs_actual.png", dpi=300)
plt.show()

print("\nâœ… Visualizations saved: metrics_comparison.png, feature_importance.png, predicted_vs_actual.png")
